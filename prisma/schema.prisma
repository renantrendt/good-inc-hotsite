generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LeadRegistration {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Personal Information
  firstName String
  lastName  String
  email     String
  phone     String
  cpf       String? // Optional for non-Brazilian users
  countryCode String @default("+55") // Default to Brazil

  // Address Information
  street      String
  number      String
  complement  String?
  neighborhood String
  city        String
  state       String
  zipCode     String
  country     String @default("Brasil") // Default to Brazil

  // Shipping Address
  street       String
  number       String
  complement   String?
  neighborhood String?
  city         String
  state        String
  country      String
  zipCode      String

  // Profile Questions
  clothesOdor           String // yes/no
  productUnderstanding  String // yes/no
  mainFocus            String // longevity/problem_solving

  // Status
  status    String @default("pending") // pending, contacted, converted
}
